{% extends 'base' %}

{% block content %}

  {% for out, filename in posts %}
    {% if out.metadata.get("dont-index", "false") != "true" %}
      <h2>
        <a href="{{ filename }}">{{ out.metadata.get("title") }}</a>
        <!--
            <span style="color: #999; float: right;">{{ out.metadata.get("creation_date").strftime("%Y-%m-%d") }}</span>
            -->
      </h2>
      <p>{{ out.split("\n")[0] }}</p>
    {% endif %}
  {% endfor %}

{% endblock %}
